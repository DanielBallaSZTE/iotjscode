<!-- Sidenav extra -->
<div class="sidenav-extra">
  <!-- File menu -->
  <div id="file-sidenav" class="sidenav-hidden">
    <h3>File</h3>
    <div class="sidenav-extra-close">
      <i class="fa fa-times extra-sidenav-toggle" aria-hidden="true" data-eid="file-sidenav"></i>
    </div>
    <ul>
      <li id="open-file-button" class="available-li">
        <div>Open File...</div>
        <div>Open files from the local drive.</div>
      </li>
      <li id="new-file-button" class="available-li">
        <div>New File</div>
        <div>Create a new file in the editor.</div>
      </li>
      <div id="hidden-new-file">
        <input class="hidden" id="hidden-file-input" type="file" multiple />
        <ul>
          <li>Allowed characters: a-z, A-Z, 0-9, _, -</li>
          <li>The file name must be unique.</li>
          <li>The file name must be at lest 1 (one) character long.</li>
        </ul>
        <input type="text" id="new-file-name" class="form-control" autofocus />
        <div id="hidden-new-file-info"></div>
        <div id="hidden-new-file-buttons" class="sidenav-cancel-ok-buttons">
          <div class="btn btn-danger btn-xs" id="cancel-file-name"><i class="fa fa-ban" aria-hidden="true"></i> Cancel</div>
          <div class="btn btn-success btn-xs disabled" id="ok-file-name"><i class="fa fa-check" aria-hidden="true"></i> OK</div>
        </div>
      </div>
      <li id="save-file-button" class="available-li disabled">
        <div>Save</div>
        <div>Save the currently opened file.</div>
      </li>
    </ul>
  </div>
  <!-- /File menu -->

  <!-- Settings menu -->
  <div id="settings-sidenav" class="sidenav-hidden">
    <h3>Settings</h3>
    <div class="sidenav-extra-close">
      <i class="fa fa-times extra-sidenav-toggle" aria-hidden="true" data-eid="settings-sidenav"></i>
    </div>

    <div class="control-block">
      <div class="control-item">
        <p>The IoT.js Code stores the settings in your browser storage.</p>
        <div class="btn btn-default btn-xs" id="local-storage-reset-button">Reset default settings</div>
      </div>
    </div>

    <div class="control-block" id="global-control-block">
      <h4>Global</h4>
      <div class="control-item">
        <label for="theme">Theme</label>
        <select id="theme" class="form-control input-sm">
          <option value="ace/theme/tomorrow">Bright</option>
          <option value="ace/theme/tomorrow_night_eighties">Dark</option>
        </select>
      </div>
    </div>

    <div class="control-block" id="editor-control-block">
      <h4>Editor</h4>
      <div class="control-item">
        <label for="fontsize">Font Size</label>
        <select id="fontsize" class="form-control input-sm">
          <option value="10px">10px</option>
          <option value="11px">11px</option>
          <option value="12px">12px</option>
          <option value="13px">13px</option>
          <option value="14px">14px</option>
          <option value="16px">16px</option>
          <option value="18px">18px</option>
          <option value="20px">20px</option>
          <option value="24px">24px</option>
        </select>
      </div>
      <div class="control-item">
        <label for="folding">Code Folding</label>
        <select id="folding" class="form-control input-sm">
          <option value="manual">manual</option>
          <option value="markbegin">mark begin</option>
          <option value="markbeginend">mark begin and end</option>
        </select>
      </div>
      <div class="control-item">
        <label for="wrap">Wrap</label>
        <select id="wrap" class="form-control input-sm">
          <option value="off">Off</option>
          <option value="40">40 Chars</option>
          <option value="80">80 Chars</option>
          <option value="free">Free</option>
        </select>
      </div>
      <div class="control-item">
        <input type="checkbox" name="selectionStyle" id="selectionStyle">
        <label for="selectionStyle">Full Line Selection</label>
      </div>
      <div class="control-item">
        <input type="checkbox" name="highlightActive" id="highlightActive">
        <label for="highlightActive">Highlight Active Line</label>
      </div>
      <div class="control-item">
        <input type="checkbox" name="showHidden" id="showHidden">
        <label for="showHidden">Show Invisibles</label>
      </div>
      <div class="control-item">
        <input type="checkbox" name="displayIndentGuides" id="displayIndentGuides">
        <label for="displayIndentGuides">Show Indent Guides</label>
      </div>
      <div class="control-item">
        <input type="checkbox" name="hScrollBarAlwaysVisible" id="hScrollBarAlwaysVisible">
        <label for="hScrollBarAlwaysVisible">Persistent HScroll</label>
        <input type="checkbox" name="vScrollBarAlwaysVisible" id="vScrollBarAlwaysVisible">
        <label for="vScrollBarAlwaysVisible" id="vscroll-label">VScroll</label>
      </div>
      <div class="control-item">
        <input type="checkbox" name="animateScroll" id="animateScroll">
        <label for="animateScroll">Animate scrolling</label>
      </div>
      <div class="control-item">
        <input type="checkbox" id="showGutter">
        <label for="showGutter">Show Gutter</label>
      </div>
      <div class="control-item">
        <input type="checkbox" id="showPrintMargin">
        <label for="showPrintMargin">Show Print Margin</label>
      </div>
      <div class="control-item">
        <input type="checkbox" id="softTab">
        <label for="softTab">Use Soft Tab</label>
      </div>
      <div class="control-item">
        <input type="checkbox" id="highlightSelectedWord">
        <label for="highlightSelectedWord">Highlight selected word</label>
      </div>
      <div class="control-item">
        <input type="checkbox" id="enableBehaviours">
        <label for="enableBehaviours">Enable Behaviours</label>
      </div>
      <div class="control-item">
        <input type="checkbox" id="fadeFoldWidgets">
        <label for="fadeFoldWidgets">Fade Fold Widgets</label>
      </div>
      <div class="control-item">
        <input type="checkbox" id="scrollPastEnd">
        <label for="scrollPastEnd">Scroll Past End</label>
      </div>
    </div>

    <div class="control-block" id="debugger-control-block">
      <h4>Debugger</h4>
      <div class="control-item">
        <label for="backtraceDepth">Backtrace depth</label>
        <input type="number" name="backtraceDepth" id="backtraceDepth" class="form-control input-sm" title="Maximum depth of backtrace. 0 by default." min="0" value="0">
      </div>
      <div class="control-item">
        <input type="checkbox" id="transpileToES5">
        <label for="transpileToES5">Transpile source to ES5</label>
        <p>Some new ES6 built-ins, static methods, instance methods and generator functions cannot be used with this environment.</p>
      </div>
    </div>
  </div>
  <!-- /Settings menu -->

  <!-- Download menu -->
  <div id="download-sidenav" class="sidenav-hidden">
    <h3>Download</h3>
    <div class="sidenav-extra-close">
      <i class="fa fa-times extra-sidenav-toggle" aria-hidden="true" data-eid="download-sidenav"></i>
    </div>
    <ul>
      <li id="export-chart-button" class="available-li disabled">
        <div>Memory usage</div>
        <div>Export measured memory usage data to a .csv file.</div>
      </li>
    </ul>
  </div>
  <!-- /Download menu -->
</div>
<!-- /Sidenav extra -->
